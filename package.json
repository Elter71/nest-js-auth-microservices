{
  "private": true,
  "name": "nest-js-auth-microservices",
  "workspaces": [
    "auth",
    "user"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": ["yarn workspaces run format", "yarn workspaces run lint"]
  },
  "scripts": {
    "postinstall": "husky install",
    "precommit": "lint-staged",
    "format": "prettier --write",
    "lint": "eslint --fix"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0"
  }
}
